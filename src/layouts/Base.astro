---
// (unchanged)
import "../styles/global.css"

const { 
  title = 'ThreeSparks Digital', 
  description = 'Software Development Singapore - Engineered to Ignite Brilliance', 
  url = 'https://www.threesparksdigital.sg'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<title>{title}</title>
		<meta name="description" content={description} />
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/logo_favicon.png" />

		<!-- SEO -->
		<meta name="author" content="ThreeSparks Digital Pte Ltd" />
		<meta name="robots" content="index, follow" />
	</head>
	<body>
	<header class="header">
		<div class="head-container nav">
		<div class="brand">
			<img src="/nav_logo.svg" alt="ThreeSparks Digital Logo" class="logo">
		</div>

		<!-- NEW: Hamburger button (visible on mobile) -->
		<button class="hamburger" aria-label="Open menu" aria-controls="mobile-menu" aria-expanded="false">
			<span class="hamburger-bar" aria-hidden="true"></span>
			<span class="hamburger-bar" aria-hidden="true"></span>
			<span class="hamburger-bar" aria-hidden="true"></span>
		</button>

		<nav class="menu" id="menu">
			<a href="/#home">Home</a>
			<a href="/#about">About</a>
			<a href="/#why">Why Us</a>
			<a href="/#tech">Technologies</a>
			<a href="/#contact">Contact</a>
		</nav>
		</div>
	</header>

	<!-- NEW: Full-screen mobile menu overlay -->
	<div id="mobile-menu" class="mobile-menu" aria-hidden="true" tabindex="-1">
		<nav class="mobile-links" role="navigation"></nav>
	</div>

	<slot />

	<footer class="footer">
		<!-- (unchanged footer) -->
	</footer>

	<!-- WhatsApp Floating Button -->
	<div class="wa-box">
	<a href="https://wa.me/6593978227" class="whatsapp-float" target="_blank" rel="noopener noreferrer" aria-label="Chat on WhatsApp">
	<img src="/whatsapp.png" alt="WhatsApp Chat" class="whatsapp-icon">
	</a>
	</div>

	<!-- Scripts -->
	<script src="/src/scripts/scroll.js" type="module"></script>
	<!-- NEW: mobile nav script -->
	<script src="/src/scripts/nav.js" type="module"></script>
	</body>
</html>
